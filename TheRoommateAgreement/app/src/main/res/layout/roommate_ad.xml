<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/roommate_ad_card_view"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/person_photo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/person_photo"
            android:fontFamily="sans-serif-light"
            android:text="Test name"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ad_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_name"
            android:layout_toRightOf="@+id/person_photo"
            android:fontFamily="sans-serif-light"
            android:text="Maybe address of advertisement"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ad_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_address"
            android:layout_toRightOf="@+id/person_photo"
            android:fontFamily="sans-serif-light"
            android:text="Maybe description of advertisement"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/icon_star"
            android:layout_width="17dp"
            android:layout_height="@dimen/icon_star"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:src="@mipmap/ic_star_black_round"
            android:tint="@color/icon_tint_normal" />

    </RelativeLayout>

</android.support.v7.widget.CardView>